<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nazwa jedzenia"
        android:inputType="text"/>


    <EditText
        android:id="@+id/edit_text_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ilość kalorii"
        android:inputType="number"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addFood"
        android:text="Save" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/przycisk"
        android:layout_height="wrap_content"
        android:text="Load" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LoadAll" />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spinnerFood"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:prompt="@string/spinnertitle" />

    <TextView
        android:id="@+id/textViewFood"
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:layout_marginTop="50dp"
        android:text="Ta" />

</LinearLayout>